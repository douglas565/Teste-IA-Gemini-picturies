
{
  "name": "lumiscan-offline",
  "productName": "LumiScan AI",
  "version": "1.0.0",
  "description": "Sistema de reconhecimento de lumin√°rias offline.",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
